.root {
  display: flex;
  flex-direction: column;
}
.line {
  width: 100%;
  height: 1px;
  background: #CCCCCC;
}
.view {
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
}
.view .image {
  margin-top: 35rpx;
  width: 10rpx;
  height: 10rpx;
}
.view .text {
  width: 100%;
  overflow: hidden;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: black;
  display: flex;
  flex-direction: column;
}
.view .text .title {
  color: black;
  width: 100%;
  overflow: hidden;
  vertical-align: center;
  line-height: 40rpx;
  margin-top: 20rpx;
}
.view .text .preview {
  margin-top: 10rpx;
  vertical-align: top;
  color: #707070;
  font-size: 25rpx;
  width: 100%;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: clip;
}
.subitem {
  display: flex;
  flex-direction: column;
}
.selected {
  background: #eeeeee;
}
