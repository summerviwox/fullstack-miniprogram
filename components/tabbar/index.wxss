.tabbar{
    background: #2b2b2b;
    display: flex;
    flex-direction: row;
}
.tabbar-border{
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    height: 1px;
    background: gray;
}
.tabbar-item{
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100rpx;
    align-items: center;
    justify-content: center;
}
.tabbar-image{
    height: 50rpx;
    width: 50rpx;
}