.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.largetitle {
  color: black;
  font-size: 34rpx;
}
.title1 {
  color: black;
  font-size: 30rpx;
}
.title2 {
  font-size: 25rpx;
  color: #555555;
}
.title3 {
  color: black;
  font-size: 20rpx;
}
.body {
  font-size: 25rpx;
  color: #707070;
}
.root {
  display: flex;
  flex-direction: column;
  border-radius: 8rpx;
  background: white;
  padding: 20rpx;
}
.root .top {
  display: flex;
}
.root .preview {
  margin-top: 10rpx;
}
.root .images {
  margin-top: 10rpx;
  display: flex;
}
.root .images .image {
  flex: 1;
  width: 0px;
  height: calc(20vw - 10rpx);
}
.root .images .leftimage {
  padding: 10rpx 10rpx 0 0rpx;
}
.root .images .midimage {
  padding: 10rpx 5rpx 0 5rpx;
}
.root .images .rightimage {
  padding: 10rpx 10rpx 0 5rpx;
}
